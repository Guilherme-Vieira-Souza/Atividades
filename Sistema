
import java.util.Scanner;

public class Principal {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
       
            CtCredito c = new CtCredito(1000);
            

                System.out.println("==-=--==-=-=Preencha os dados do cliente abaixo==-=-==-=-");
                System.out.println("Digite o Nome: ");
                String Nome = sc.nextLine();
                System.out.println("Digite o Cpf: ");
                String Cpf = sc.nextLine();
                System.out.println("Digite o Email: ");
                String email = sc.nextLine();
                System.out.println("Digite o Telefone: ");
                String telefone = sc.nextLine();
               
         Cliente cl = new Cliente(Nome, Cpf, email, telefone);

        c.consultarLimite();
            System.out.println("Limite inicial: R$" + c.consultarLimite());
            System.out.println("Fatura inicial: R$" + c.getFatura());

       
        int opcao = 1;


        do {
                System.out.println("\n=-=-=-=-= MENU =-=-=-=-=");
                System.out.println("1 - Consultar Limite");
                System.out.println("2 - Consultar Fatura");
                System.out.println("3 - Realizar compra");
                System.out.println("4 - Consultar Cashback");
                System.out.println("5 - Aplicar Cashback na Fatura");
                System.out.println("6 - Consultar dados completos do  cliente");
                System.out.println("7 - Consultar dados simples do  cliente");
                System.out.println("0 - Sair");
                System.out.println("Escolha uma opção: ");

            opcao = sc.nextInt();

        
            
            switch (opcao) {
                case 1:
                    System.out.println("Seu limite é de: " + c.consultarLimite()); 
                    break;
                case 2:
                    System.out.println("Sua fatura atual é: R$" + c.getFatura()); 
                    break;
                case 3:
                    System.out.println("Digite o valor da compra: " );
                    double valor = sc.nextDouble();
                    c.realizarCompra(valor); 
                    break;
                case 4:
                    System.out.println("Voçe tem: " + c.getCashbackAcumulado()+ " De cashBack"); 
                    break;
                case 5:
                    c.aplicarCashbackNaFatura(); 
                    break;
                case 6: 
                    System.out.printf("\nNome: " + cl.getNome());
                    System.out.printf("\nCpf: " + cl.getCpf());
                    System.out.printf("\nE-mail: " + cl.getEmail());
                    System.out.printf("\nTelefone: " + cl.getTelefone());
                    break;
                case 7: 
                    System.out.printf("\nNome: " + cl.getNome());
                    System.out.printf("\nCpf: " + cl.getCpf());
                    System.out.printf("\nE-mail: " + cl.getEmail());
                    break;
                case 0:
                    System.out.println("Encerrando o programa...");
                    break;
                default:
                    System.err.println("Selecione uma opção correta!");
                    break;
            }
        } while (opcao != 0);

        
        sc.close();
    }
}
